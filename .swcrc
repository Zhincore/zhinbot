{
  "$schema": "https://json.schemastore.org/swcrc",
  "env": {
    "targets": {
      "node": "16"
    }
  },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./dist/*"
      ],
      "@core/*": [
        "./dist/core/*"
      ]
    },
    "externalHelpers": true,
    "loose": true,
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  },
  "module": {
    "type": "commonjs"
  }
}
