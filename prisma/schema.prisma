datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// #### MAIN ####

model Guild {
  guildId String @id

  // members Member[]

  // Birthdays
  bdayAlertTime    String?
  bdayAlertChannel String?
  bdayAlertPing    String?

  // Player
  playerChannel String?

  // Selfroles
  autorole String?

  // Modules
  activity  Activity[]
  aiConfig  AIConfig?
  modConfig ModConfig?
  warnings  Warning[]
}

